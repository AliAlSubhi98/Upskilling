            "url": {
              "raw": "{{apiEndpoint}}/users/00000000-0000-0000-0000-000000000000",
              "host": ["{{apiEndpoint}}"],
              "path": ["users", "00000000-0000-0000-0000-000000000000"]
            }
          },
          "response": []
        },
