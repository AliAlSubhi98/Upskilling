    {
      "name": "Filtering & Sorting",
      "item": [
        {
          "name": "Sort by First Name ASC",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{apiEndpoint}}/users?sortBy=firstName&sortDir=asc&page=0&size=10",
              "host": ["{{apiEndpoint}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "sortBy",
                  "value": "firstName"
                },
                {
                  "key": "sortDir",
                  "value": "asc"
                },
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Sort by Created Date DESC",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{apiEndpoint}}/users?sortBy=createdAt&sortDir=desc&page=0&size=10",
              "host": ["{{apiEndpoint}}"],
              "path": ["users"],
              "query": [
