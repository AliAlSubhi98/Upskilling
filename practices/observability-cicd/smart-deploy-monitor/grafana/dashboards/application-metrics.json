{
  "title": "Smart Deploy Monitor - Application Metrics",
  "tags": ["application", "metrics", "spring-boot"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[5m])",
          "legendFormat": "{{method}} {{uri}}",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {}
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Response Times (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_server_requests_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {}
        }
      }
    },
    {
      "id": 3,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "system_cpu_usage",
          "legendFormat": "CPU Usage",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {}
        }
      }
    },
    {
      "id": 4,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "legendFormat": "Heap Used",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "legendFormat": "Heap Max",
          "refId": "B",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {}
        }
      }
    },
    {
      "id": 5,
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])",
          "legendFormat": "5xx Errors",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        },
        {
          "expr": "rate(http_server_requests_seconds_count{status=~\"4..\"}[5m])",
          "legendFormat": "4xx Errors",
          "refId": "B",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {}
        }
      }
    },
    {
      "id": 6,
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "application_connections_active",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        }
      }
    },
    {
      "id": 7,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
      "targets": [
        {
          "expr": "application_requests_total",
          "refId": "A",
          "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"}
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {}
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
